{{> header}}
<div class="row">
    <div class="col-md-4 col-md-offset-4">


        <div class="panel panel-primary details">
            <div class="panel-heading">{{EventName}}</div>
            {{#if CoverPicture}}
                <div class="panel-body"><img src="{{CoverPicture}}" class="img-responsive" style="height: 225px" alt="Image" ></div>
                {{#if hasEventPhotos}}
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-lg-offset-2 col-lg-8">
                                <div id="myCarousel" class="carousel slide" data-ride="carousel">
                                    <!-- Indicators -->
                                    <ol class="carousel-indicators">
                                        {{#each photos}}
                                            <li data-target="#myCarousel" data-slide-to="{{@index}}" {{#if firstPhoto}}class="active"{{/if}}></li>
                                        {{/each}}
                                    </ol>

                                    <!-- Wrapper for slides -->
                                    <div class="carousel-inner">
                                        {{#each photos}}
                                            <div class="item {{#if firstPhoto}}active{{/if}}">
                                                <img src="{{imageUrl}}" style="height: 150px" class="img-responsive center-block" alt="{{imageAlt}}">
                                                <div class="carousel-caption">
                                                </div>
                                            </div>
                                        {{/each}}
                                    </div>
                                    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                                        <span class="glyphicon glyphicon-chevron-left"></span>
                                        <span class="sr-only">Previous</span>
                                    </a>
                                    <a class="right carousel-control" href="#myCarousel" data-slide="next">
                                        <span class="glyphicon glyphicon-chevron-right"></span>
                                        <span class="sr-only">Next</span>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                {{/if}}
            {{else}}
                <div class="panel-body"><img src="././bootstrap/static/no-image.jpg"  class="img-responsive"  alt="Image"></div>
            {{/if}}
            <div class="panel-footer">Date: {{CDate}}</div>
            <div class="panel-footer">Details: {{Details}}</div>
            <div class="panel-footer">Location: {{Location}}</div>
        </div>
        <div class="col-md-4">
        </div>
    </div>
</div>
{{> tickets}}
{{#if isCreator}}
<div class="row">
    <div class="col-md-4 col-md-offset-4">
        <div class="panel-footer">
            <a href="#/events/edit/:{{_id}}"><button class="btn btn-primary" id="btnEdit">Edit</button></a>
            <a href="#/events/delete/:{{_id}}" ><button class="btn btn-danger" id="btnDelete">Delete</button></a>
        </div>
        <div class="col-md-4">
        </div>
    </div>
</div>
{{/if}}
{{> footer}}
