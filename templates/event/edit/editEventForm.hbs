<div class="container">
    <div class="row">
        <div class="col-lg-offset-4 col-lg-4">
            <div class="page-header">
                <h1 class="text-center">Edit event</h1>
            </div>
            <form class="form-horizontal" action="#/events/edit/:{{_id}}" method="post">
                <fieldset>
                    <div class="form-group">
                        <label for="createEventName">Event name:</label>
                        <input type="text" class="form-control" name="eventName" value="{{EventName}}"
                               id="createEventName">
                    </div>
                    <div class="form-group">
                        <label for="createEventDate">Event date:</label>
                        <input type="text" class="form-control" name="eventDate"
                               value="{{CDate}}" id="createEventDate">
                    </div>
                    <div class="form-group">
                        <label for="createEventLocation">Event location:</label>
                        <input type="text" class="form-control" name="eventLocation" value="{{Location}}"
                               id="createEventLocation">
                    </div>
                    <div class="form-group">
                        <label for="createEventDetails">Event details:</label>
                        <textarea class="form-control" name="eventDetails" placeholder="{{Details}}"
                                  id="createEventDetails"></textarea>
                    </div>

                    <div class="form-group">
                        <label for="createEventTotalTickets">Event total tickets:</label>
                        <input type="number" class="form-control" name="eventTotalTickets"
                               value="{{AvailableTickets}}"
                               id="createEventTotalTickets"/>
                    </div>
                    <div class="form-group">
                        <label for="createEventTicketsPrice">Event ticket price:</label>
                        <input type="number" class="form-control" name="eventTicketPrice" value="{{TicketPrice}}"
                               id="createEventTicketsPrice"/>
                    </div>
                    <div class="form-group">
                        <label for="eventCoverPicture">Event cover photo:</label>
                        <input class="form-control" name="editEventCoverPicture" value="{{CoverPicture}}"
                               id="createEventPhoto" required/>
                    </div>
                    <div class="form-group" id="editMorePhotosDiv">
                        <label>Event photos:</label>
                        {{#each photos}}
                           <input class="form-control" value="{{this}}" id="createEventPhoto"/>
                        {{/each}}

                        <label id="editMorePhotos">Add more: &#8628;</label>
                        <!--<input class="form-control" placeholder="Enter picture url..."/>-->

                    </div>
                    <div class=" form-group">
                        <div class="dropdown">
                            <label class="dropdown-toggle" data-toggle="dropdown" for="createEventCategory">Choose
                                category: </label>

                            <div>
                                <select>
                                    {{#each categories}}
                                        <option data-catId="{{_id}}">{{CategoryName}}</option>
                                    {{else}}
                                        <option>No categories!</option>
                                    {{/each}}
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <a href="#/events">
                            <button type="button" class="btn btn-primary">Cancel</button>
                        </a>
                        <button type="submit" class="btn btn-success">Submit</button>
                    </div>
                </fieldset>
            </form>
        </div>
    </div>
</div>
